{
  "functions": [
    {
      "source": "tentcowork-backend", 
      "codebase": "default",
      "runtime": "nodejs22",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build" 
      ]
    }
  ],
  "hosting": {
    "public": "tentcowork-frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api" 
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
