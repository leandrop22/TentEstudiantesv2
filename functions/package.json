{
  "name": "functions",
  "version": "1.0.0",
  "description": "Firebase Functions for TentCowork Backend",
  "main": "dist/index.js",
  "engines": {
   "node": ">=20"
  },
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "mercadopago": "^2.8.0",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.14",
    "typescript": "^5.8.3"
  },
  "private": true
}
